<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_marginBottom="5px">
<!--    <View android:id="@+id/View01" android:layout_width="fill_parent"
          android:layout_height="2dip" android:background="#AAAAAA">
    </View>-->
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/textViewAbout"
              android:text="About timeclockj:"
              android:layout_gravity="center"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10px"/>
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/buttonAbout"
              android:text="About"
              android:layout_gravity="right"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="15dip"
              android:layout_weight="2"/>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/textViewContributors"
              android:text="View contributors:"
              android:layout_gravity="center"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10px"/>
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/buttonContributors"
              android:text="Contributors"
              android:layout_gravity="right"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="15dip"
              android:layout_weight="2"/>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/textViewHelp"
              android:text="Read the embedded manual:"
              android:layout_gravity="center"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10px"/>
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/buttonHelp"
              android:text="Help"
              android:layout_gravity="right"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="15dip"
              android:layout_weight="2"/>
    <View android:id="@+id/View01" android:layout_width="fill_parent"
          android:layout_height="2dip" android:background="#AAAAAA">
    </View>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/textViewFileData"
              android:text="File Data:"
              android:layout_gravity="center"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10px"/>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/textViewFileSize"
              android:layout_gravity="center"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10px"/>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/textViewLastModified"
              android:layout_gravity="center"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10px"/>
  </LinearLayout>
</ScrollView>